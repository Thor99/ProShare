<% if belongs_to_user(@project) %>
	<ul class="nav nav-pills nav-justified">
  		<li role="presentation">
  			<%= link_to t('.links_edit_project'), edit_project_path(@project) %>
  		</li>

  		<li role="presentation">
  			<%= link_to t('.destroy'), project_path(@project), method: :delete, data: { confirm: t('dialogs.destroy') } %>
  		</li>
  	</ul>
<% end %>
<div class="project_name">
	<%= @project.name %>
</div>

<div class="project_about">
	<%= @project.about %>
</div>

<div class="author_show">
	<%= t('.author_project') %> <%= link_to @project.user.name, @project.user, target: "_blank" %>
</div>

<% if @project.website.present? %>
	<ul class="list-group">
  		<li class="list-group-item", style="text-align:center;font-size:18px;"><b>Website</b></li>
		<li class="list-group-item", style="text-align:center;font-size:16px;">
			<%= link_to @project.website, @project.website, target: "_blank" %>
		</li>
	</ul>
<% end %>

<% if @project.facebook_page.present? %>
	<ul class="list-group">
  		<li class="list-group-item", style="text-align:center;font-size:18px;"><b><%= t 'projects.show.page_fb' %></b></li>
		<li class="list-group-item", style="text-align:center;font-size:16px;">
			<%= link_to @project.facebook_page, @project.facebook_page, target: "_blank" %>
		</li>
	</ul>
<% end %>

<% if @project.image_proj.present? %>
	<div class="image_show">
		<img><%= image_tag @project.image_proj.url(:medium) %></img>
	</div>
<% end %>

<% if @project.video.present? %>
	<div class="video_show">
		<iframe width="100%" height="500" src="https://www.youtube.com/embed/<%= @yt_code %>" frameborder="0" allowfullscreen></iframe><br>
	</div>	
<% end %>




